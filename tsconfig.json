{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ESNext",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "types": [
      "node"
    ]
  },
  "include": [
    "**/lib/*.ts",
    "**/bin/*.ts"
  ],
  "exclude": [
    "**/node_modules"
  ]
}