{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2020", "es2021", "dom"],
    "target": "es2020",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,

    "strict": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false
  },
  "include": ["lib/*.ts"],
  "exclude": ["**/node_modules", "**/test/*"]
}
